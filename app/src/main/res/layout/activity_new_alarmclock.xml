<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".ui.NewAlarmClockActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new_alarm_clock"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="添加闹钟"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <!--time picker-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/Theme.picker"
            android:timePickerMode="spinner"
            />
    </RelativeLayout>
    <!--others-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--重复-->
            <RelativeLayout
                android:id="@+id/alarm_clock_repeat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_info_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="重复"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alarm_clock_repeat_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/alarm_clock_repeat_IV"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/alarm_clock_repeat_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>
            <!--周一到周日的按钮-->
            <LinearLayout
                android:id="@+id/alarm_clock_repeat_select"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/monday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周一"
                        android:textOn="周一" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/tuesday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周二"
                        android:textOn="周二" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/wednesday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周三"
                        android:textOn="周三" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/thursday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周四"
                        android:textOn="周四" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/friday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周五"
                        android:textOn="周五" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/saturday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周六"
                        android:textOn="周六" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/sunday_tb"
                        style="@style/alarm_clock_repeat_TB_background"
                        android:textOff="周日"
                        android:textOn="周日" />
                </LinearLayout>
            </LinearLayout>
            <!--标签-->
            <RelativeLayout
                android:id="@+id/alarm_clock_label"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_info_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="标签"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alarm_clock_label_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/alarm_clock_label_IV"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/alarm_clock_label_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>
            <!--提醒方式-->v
            <RelativeLayout
                android:id="@+id/alarm_clock_remind"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_info_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="提醒方式"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alarm_clock_remind_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/alarm_clock_remind_IV"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/alarm_clock_remind_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>
            <!--铃声-->
            <RelativeLayout
                android:id="@+id/alarm_clock_music"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_info_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="铃声"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alarm_clock_music_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/alarm_clock_music_IV"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/alarm_clock_music_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>
            <!--小睡-->
            <RelativeLayout
                android:id="@+id/alarm_clock_snooze"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_info_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="小睡"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alarm_clock_snooze_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/alarm_clock_snooze_IV"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/alarm_clock_snooze_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>